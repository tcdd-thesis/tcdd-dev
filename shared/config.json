{
  "backendPort": 5000,
  "cppServerPort": 5100,
  "frontendPort": 3000,
  "camera": {
    "width": 640,
    "height": 480,
    "fps": 30,
    "bufferSize": 1
  },
  "detection": {
    "modelFormat": "ncnn",
    "modelPath": ["backend/model/model.ncnn.param", "backend/model/model.ncnn.bin"],
    "labelsPath": "backend/model/labels.txt",
    "confidenceThreshold": 0.5,
    "nmsThreshold": 0.5,
    "iouThreshold": 0.5,
    "inputSize": [640, 480],
    "pollIntervalMs": 500,
    "maxDetectionsDisplay": 5,
    "detectionInterval": 1,
    "jpegQuality": 80
  },
  "display": {
    "fullscreen": false,
    "optimizedForPi": true,
    "theme": "dark"
  },
  "performance": {
    "enableGPU": false,
    "useVulkan": false,
    "maxCacheSize": 100,
    "compressionLevel": 6
  },
  "logging": {
    "format": "csv",
    "path": "logs/",
    "metricsInterval": 1000
  }
}
