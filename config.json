{
  "port": 5000,
  "debug": false,
  "host": "0.0.0.0",
  
  "camera": {
    "width": 640,
    "height": 480,
    "fps": 30,
    "rotation": 0,
    "flip_horizontal": false,
    "flip_vertical": false,
    "brightness": 0.0,
    "contrast": 1.0,
    "saturation": 1.0,
    "auto_exposure": true,
    "use_mock": false
  },
  
  "detection": {
    "engine": "ncnn",
    "model": [
      "backend/models/model.ncnn.param",
      "backend/models/model.ncnn.bin"
    ],
    "labels": "backend/models/labels.txt",
    "confidence": 0.5,
    "iou_threshold": 0.45,
    "max_detections": 100,
    "classes": [],
    "show_labels": true,
    "show_confidence": true,
    "bbox_thickness": 2,
    "font_scale": 0.5
  },
  
  "streaming": {
    "enabled": true,
    "quality": 85,
    "max_fps": 30,
    "buffer_size": 2
  },
  
  "capture": {
    "save_detections": false,
    "save_path": "data/captures",
    "save_format": "jpg",
    "save_timestamp": true,
    "min_confidence_to_save": 0.7
  },
  
  "logging": {
    "level": "INFO",
    "file": "data/logs/app.log",
    "max_size_mb": 10,
    "backup_count": 5,
    "console_output": true,
    "log_detections": false
  },
  
  "performance": {
    "enable_gpu": false,
    "num_threads": 4,
    "inference_device": "cpu"
  },
  
  "alerts": {
    "enabled": false,
    "detection_threshold": 10,
    "cooldown_seconds": 60,
    "webhook_url": ""
  },
  
  "ui": {
    "theme": "dark",
    "show_fps": true,
    "show_stats": true,
    "auto_start_camera": false,
    "notification_duration": 3000
  }
}
